<Window x:Class="MailManager.AddAccount"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="AddAccount" Height="200" Width="300">
    <Grid>
        <Button Height="23" HorizontalAlignment="Right" Margin="0,0,12,11" 
                Name="btOK" VerticalAlignment="Bottom" Width="75" Click="btOK_Click" >OK</Button>
        <Label Margin="12,12,0,122" Name="label1" HorizontalAlignment="Left" Width="76"  Height="23">Mail Address</Label>
        <TextBox Height="23" Margin="94,12,12,0" Name="tbUserMail" VerticalAlignment="Top" />
        <Label Margin="11,41,0,0" Name="label2" HorizontalAlignment="Left" Width="76" Height="23" VerticalAlignment="Top">Password</Label>
        <PasswordBox x:Name="pbPasswordCtl" Margin="94,41,12,0" Height="23" VerticalAlignment="Top" />
        <TextBox Name="tbHost" Margin="94,70,12,69"/>
        <TextBox Height="23" Margin="94,0,12,40" Name="tbPort" VerticalAlignment="Bottom" />
        <Label HorizontalAlignment="Left" Margin="12,65,0,69" Name="label3" Width="76" Height="23">Host</Label>
        <Label Height="23" HorizontalAlignment="Left" Margin="12,0,0,42" Name="label4" VerticalAlignment="Bottom" Width="76">Port</Label>
    </Grid>
</Window>
